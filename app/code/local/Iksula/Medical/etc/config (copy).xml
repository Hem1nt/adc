	<acl>
	  <resources>
		<all>
		  <title>Allow Everything</title>
		</all>
		<admin>
		  <children>
			<medical translate="title" module="medical">
			  <title>Medical</title>
			  <sort_order>1000</sort_order>
			  <children>
		  <medical translate="title">
			<title>Manage Medical</title>
			<sort_order>0</sort_order>
		  </medical>
			  </children>
			</medical>
		  </children>
		</admin>
	  </resources>
	</acl>
	<layout>
	  <updates>
		<medical>
		  <file>medical.xml</file>
		</medical>
	  </updates>
	</layout>
  </adminhtml>
</config> 