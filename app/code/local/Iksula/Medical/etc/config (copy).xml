    <helpers>
      <medical>
        <class>Iksula_Medical_Helper</class>
      </medical>
    </helpers>
	<blocks>
	  <medical>
		<class>Iksula_Medical_Block</class>
	  </medical>
	   <adminhtml>
	  	<rewrite>
	  		<customer_edit_tab_medical>Iksula_Medical_Block_Adminhtml_Customer_Edit_Tab_Medical</customer_edit_tab_medical>
	  	</rewrite>
	  </adminhtml>
	  <adminhtml>
	  	<rewrite>
	  		<customer_edit_tabs>Iksula_Medical_Block_Adminhtml_Customer_Edit_Tabs</customer_edit_tabs>
	  	</rewrite>
	  </adminhtml>
	</blocks>
	<models>
	  <medical>
		<class>Iksula_Medical_Model</class>
		<resourceModel>medical_mysql4</resourceModel>
	  </medical>
	  <medical_mysql4>
		<class>Iksula_Medical_Model_Mysql4</class>
		<entities>		  
			  <medical>
				<table>medical_history</table>
			  </medical>
        </entities>
	  </medical_mysql4>
	</models>
	<resources>
	  <medical_setup>
		<setup>
		  <module>Iksula_Medical</module>
		</setup>
		<connection>
		  <use>core_setup</use>
		</connection>
	  </medical_setup>
	  <medical_write>
		<connection>
		  <use>core_write</use>
		</connection>
	  </medical_write>
	  <medical_read>
		<connection>
		  <use>core_read</use>
		</connection>
	  </medical_read>
	  <salesattribute1377155265_setup>
		<setup>
		  <module>Iksula_Medical</module>
		  <class>Mage_Sales_Model_Mysql4_Setup</class>
		</setup>
		<connection>
		  <use>core_setup</use>
		</connection>
	  </salesattribute1377155265_setup>
	  <salesattribute1377155265_write>
		<connection>
		  <use>core_write</use>
		</connection>
	  </salesattribute1377155265_write>
	  <salesattribute1377155265_read>
		<connection>
		  <use>core_read</use>
		</connection>
	  </salesattribute1377155265_read>
	</resources>
    <events>
	   <sales_order_place_after> <!-- identifier of the event we want to catch -->
        <observers>
          <iksula_medical_observer> 
            <type>singleton</type> 
            <class>Iksula_Medical_Model_Observer</class> 
            <method>medicalhistoryorderidset</method>
          </iksula_medical_observer>
        </observers>
      </sales_order_place_after>
    </events>
  </global>
  <admin>
	<routers>
	  <medical>
	    <use>admin</use>
		<args>
		  <module>Iksula_Medical</module>
		  <frontName>medical</frontName>
		</args>
	  </medical>
	</routers>
  </admin>
  <adminhtml>
