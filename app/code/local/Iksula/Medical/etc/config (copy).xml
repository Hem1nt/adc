<?xml version="1.0"?>
<config>
  <modules>
    <Iksula_Medical>
      <version>0.1.0</version>
    </Iksula_Medical>
  </modules>
  <global>
  	<!-- 	<rewrite>        
            <iksula_medical_adminhtml_customercontroller>
                <from><![CDATA[#^/admin/customer/#]]></from>
