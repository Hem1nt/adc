<?xml version="1.0"?>
<config>
  <modules>
    <Iksula_Promotions>
      <version>0.1.0</version>
    </Iksula_Promotions>
  </modules>
  <frontend>
    <routers>
      <promotions>
        <use>standard</use>
          <args>
            <module>Iksula_Promotions</module>
            <frontName>promotions</frontName>
          </args>
      </promotions>
    </routers>
		<layout>
		  <updates>
			<promotions>
			  <file>promotions.xml</file>
			</promotions>
		  </updates>
		</layout>
  </frontend>
  <global>
    <helpers>
      <promotions>
        <class>Iksula_Promotions_Helper</class>
      </promotions>
    </helpers>
	<blocks>
	  <promotions>
		<class>Iksula_Promotions_Block</class>
	  </promotions>
	</blocks>
  </global>
</config> 