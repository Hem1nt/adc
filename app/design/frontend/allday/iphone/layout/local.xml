<layout version="0.1.0">
	<default>
		<reference name="head">
			<!-- <action method="addJs"><script>js/ccard.js</script></action> -->
			<action method="addJs"><script>jquery-1.7.min.js</script>></action>
			<action method="addJs"><script>ecommerceteam/cloud-zoom.1.0.2.js</script></action>
			<action method="addItem"><type>skin_css</type><name>css/demo.css</name></action>
			<action method="addItem"><type>skin_css</type><name>css/jquery.mmenu.css</name></action>
			<action method="addItem"><type>skin_css</type><name>css/style_rk.css</name></action>
			<action method="addItem"><type>skin_js</type><name>js/jquery.mmenu.js</name></action>
			<action method="addItem"><type>skin_js</type><name>js/script.adc.js</name></action>
			<action method="addItem"><type>skin_js</type><name>js/responsiveslides.min.js</name></action>
		</reference>

		<reference name="header">
                <block type="core/template" name="account.nav.link" as="menulinks" template="page/html/navigation.phtml"/>
        </reference>
        <remove name="slider_11" />
        <remove name="featured_product_list" />
        <remove name="home_content" />
        <reference name="footer">
			<block type="core/template" name="livechat_option" template="page/html/livechat.phtml" />
			<block type="core/template" name="ourpartner" template="page/html/ourpartner.phtml" />
		</reference>
	</default>
	<cms_index_index>
		<remove name="left" />
		<reference name="content">

		</reference>
		<reference name="head">
			<action method="addItem"><type>skin_css</type><name>css/bought.css</name></action>
			<!-- <action method="addItem"><type>skin_js</type><name>js/responsiveslides.min.js</name></action> -->
		</reference>
	</cms_index_index>

	<importorder_index_index>
		<remove name="left"/>
	</importorder_index_index>

	<catalog_product_view>
	 	<reference name="head">
	 		<action method="addJs"><script>jwplayer/jwplayer.js</script></action>
	 		<action method="addJs"><script>jwplayer/akamaihtml5-min.js</script></action>
	 	</reference>
	</catalog_product_view>
</layout>
