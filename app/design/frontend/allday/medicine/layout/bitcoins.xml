<layout version="0.1.0">
    <bitcoins_processing_payment>
        <reference name="root">
            <action method="setTemplate"><template>page/1column.phtml</template></action>
        </reference>
        <reference name="content">
            <block type="bitcoins/payment" name="bitcoins_payment" template="bitcoins/payment.phtml" />
        </reference>
    </bitcoins_processing_payment>

    <bitcoins_processing_placeform>
        <reference name="root">
            <action method="setTemplate"><template>bitcoins/blank.phtml</template></action>
        </reference>
        <reference name="content">
            <block type="bitcoins/placeform" name="bitcoins_placeform" template="bitcoins/placeform.phtml" />
        </reference>
    </bitcoins_processing_placeform>
</layout>
