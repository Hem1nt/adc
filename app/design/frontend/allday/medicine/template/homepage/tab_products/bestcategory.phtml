<?php
	$categories = Mage::helper('configfile')->getDesktopBannerData();
?>
<?php if(!$categories): ?>
	<p class="note-msg"><?php echo $this->__('There are no categories in the selection.') ?></p>
	<?php else: ?>
	<div class="slider-block_desktop">
		<?php foreach ($categories as $categorie):?>
		<ul class="products-grid_desktop" id="product-category1_desktop">
	            <li class="item">
	                <div class="inner_wrapper_desktop">
	                <?php 
	                $categoryImage=$categorie->getDesktopBanner(); 
	                $categoryImage = Mage::getBaseUrl(Mage_Core_Model_Store::URL_TYPE_MEDIA).'catalog/category/'.$categoryImage;?>   
                	<a href="<?php echo $categorie->getUrl()?>">
                		<img src="<?php echo $categoryImage; ?>" alt="<?php echo $categorie->getName() ?>"/>
                	</a></br>
	                	<span><?php echo  $categorie->getName();?></span>
	                </div>	
	            </li>
	    </ul>
		<?php endforeach;?>	    
    </div>
<?php endif;?>

