		 	$.ajax({
		        url: "<?php echo $this->getUrl("recentpurchasedpopup/index/getRecentlySoldItems")?>",
		        type: "get",
		        success: function (response) {
		        	$('#show_products').html(response);
		        }
		    });
	 	},60 * 1000);	
	})
</script>