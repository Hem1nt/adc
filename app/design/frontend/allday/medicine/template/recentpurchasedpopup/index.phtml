<div id="show_products" class="showProducts"></div>
<script type="text/javascript">
	jQuery(document).ready(function($){
		$.ajax({
		        url: "<?php echo $this->getUrl("recentpurchasedpopup/index/getRecentlySoldItems")?>",
		        type: "get",
		        success: function (response) {
		        	$('#show_products').html(response);
		        }
		    });
